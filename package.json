{
  "name": "hrmageddon",
  "version": "1.0.0",
  "description": "A modern web remake of the 2009 Adult Swim Flash tactics game where rival departments wage cubicle warfare for control of the office floor.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -k -n client,server -c green,blue \"npm --workspace client run dev\" \"npm --workspace server run dev\"",
    "build": "npm -w client run build && npm -w server run build",
    "start": "npm -w server run start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "npm -w client run build",
    "lint": "npm -w client run lint",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') require('child_process').execSync('npx husky', {stdio: 'inherit'})\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walterreid/HRmageddon.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/walterreid/HRmageddon/issues"
  },
  "homepage": "https://github.com/walterreid/HRmageddon#readme",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "tsx": "^4.20.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "npm -w client run lint --fix"
  }
}
